<style>
  .separator {
    width: 100%;
    height: 100vh;
    display: grid;
    padding-top: 90px;
    padding-bottom: 90px;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: center;
    h2 {
      align-self: flex-end;
    }
    p {
      align-self: flex-start;
      font-size: 16px;
      line-height: 1.5;
    }
  }

  @media (min-width: 768px) {
    .separator {
      grid-template-columns: 1fr 1fr;

      h2 {
        align-self: auto;
        font-size: 40px;
      }
      p {
        align-self: auto;
        font-size: 18px;
      }
    }
  }
</style>
<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  import SplitType from 'split-type';

  gsap.registerPlugin(ScrollTrigger);

  // Split h2 into characters
  const h2 = new SplitType('.separator h2', { types: 'chars' });

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: '.separator',
      start: 'top 50%', // cuando la sección llegue al 20% desde el top
      toggleActions: 'play none none reverse',
      markers: false,
    },
  });

  // Primera animación (título)
  tl.from(h2.chars, {
    x: 10,
    ease: 'power2.out',
    duration: 1,
    stagger: 0.03,
    opacity: 0,
  });

  tl.from(
    '.separator p',
    {
      // y: 30,
      opacity: 0,
      duration: 1.5,
      ease: 'power2.out',
    },
    '-=1'
  );
</script>
